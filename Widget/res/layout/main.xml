<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="160dp"
    android:orientation="vertical" android:gravity="top|center">



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:background="@drawable/btn_black"
        android:gravity="top|center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pleiades_logo" />







        <TextView
            android:id="@+id/ename"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp" />

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/day_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08-4-2013"
            android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="right" android:textColor="#66CCFF"/>


        <TextView
            android:id="@+id/tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:text="9-4-2013"
            android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="#66CCFF"/>

        
        
</LinearLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top|center"
    android:orientation="horizontal" >
        
       <TextView
            android:id="@+id/van"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10-4-2012"
            android:textAppearance="?android:attr/textAppearanceSmall" android:gravity="right" android:textColor="#66CCFF"/>
       

        
</LinearLayout>
    </LinearLayout>
</LinearLayout>